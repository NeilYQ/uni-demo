{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "Music App",
				"titleNView": {
					"buttons": [
						{
							"type": "menu",
							"float": "left"
						},
						{
							"type": "none",
							"text": "\ue466",
							"fontSrc": "/static/uni.ttf"
						}
					]
				}
			}
		}
	    ,{
            "path" : "pages/search/search",
            "style" : {
				"titleNView": {
					"searchInput": {
						"placeholder": "搜索歌曲",
